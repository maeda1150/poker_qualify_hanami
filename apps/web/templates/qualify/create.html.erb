<h2> Board </h2>
<div class="playingCards fourColours rotateHand">
  <ul class="table">
    <% bord.each do |card| %>
      <li>
          <div class="card rank-<%= card[:num] %> <%= card[:suit] %>">
            <span class="rank"><%= card[:num].upcase %></span>
            <span class="suit">&<%= card[:suit] %>;</span>
          </div>
      </li>
    <% end %>
  </ul>
</div>

<div class="clear"></div>
<% hands.each_with_index do |hand, index| %>
  <h3> Player <%= index + 1 %> </h3>
  <div class="playingCards fourColours rotateHand">
    <ul class="table">
      <% hand.each do |card| %>
        <li>
            <div class="card rank-<%= card[:num] %> <%= card[:suit] %>">
              <span class="rank"><%= card[:num].upcase %></span>
              <span class="suit">&<%= card[:suit] %>;</span>
            </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
<% end %>

</br>
<div class="clear"></div>

<% ws = %w[Even Player1 Player2] %>
<% winner = ws[result] %>
<% correct = (result == answer)? 'correct' : 'wrong' %>
<h3>Your answer is <%= correct %>!! Winner is <%= winner %>.</h3>

</br>
